
(
  limit 50
  (descending
    (list score duration_seconds)
    (avg
      (list user_id name)
      (list score duration_seconds)
      (join
        (== uid user_id)
        (get users)
        (join
          (== rid roleplay_id)
          (get roleplays)
          (get evaluations)
        )
      )
    )
  )
)
